digraph {

    label="faststream states expanded";

    subgraph cluster_0 {
        label="run";
        start;
        flow;
        flush;
        stop;
    }

    subgraph cluster_1 {
        label="pause";
        wait;
        configure;
    }

    subgraph cluster_2 {
        label="exit";
        destroy;
        return;
    }

    start -> flow;
    flow -> flush;
    flow -> stop;
    flush -> stop;
    stop -> wait;
    wait -> start;
    wait -> destroy;
    destroy -> return;
    wait -> configure;
    configure -> wait;
}
